@model MileageClaimViewModel
@{
    ViewData["Title"] = "New Mileage Claim";
}

<div class="container" style="max-width: 1280px; margin: 0 auto; padding: 1.5rem;">
    <!-- Header Card -->
    <div class="custom-card mb-4" style="padding: 1.5rem;">
        <a asp-action="Index" class="btn-link-custom mb-3">
            <i class="bi bi-chevron-left"></i>
            Back to Claims
        </a>
        <h1 class="text-dark-custom" style="font-size: 1.875rem; font-weight: 700; margin: 0;">New Mileage Claim</h1>
    </div>

    <!-- Claim Period Form -->
    <form asp-action="Create" method="post">
        <div class="custom-card" style="padding: 1.5rem;">
            <h2 class="text-dark-custom mb-4" style="font-size: 1.125rem; font-weight: 600;">Claim Period</h2>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="StartDate" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;"></label>
                    <input asp-for="StartDate" class="form-control form-control-custom" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="EndDate" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;"></label>
                    <input asp-for="EndDate" class="form-control form-control-custom" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="RatePerKm" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;"></label>
                    <input asp-for="RatePerKm" class="form-control form-control-custom" type="number" step="0.01" />
                    <span asp-validation-for="RatePerKm" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn-primary-custom d-inline-flex align-items-center gap-2">
                    <i class="bi bi-save"></i>
                    Create Claim
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
