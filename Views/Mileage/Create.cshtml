@model MileageExpenseTracker.Models.MileageClaim
@{
    ViewData["Title"] = "Add Claim";
}


<div class="container" style="max-width: 1280px; margin: 0 auto; padding: 1.5rem;">
    @* <div class="custom-card mb-4" style="padding: 1.5rem;"> *@
        <a asp-action="Index" class="btn-link-custom ">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-short" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5" />
            </svg>
            Back to Claims
        </a>
        <h1 class="text-dark-custom" style="font-size: 1.875rem; font-weight: 700; margin: 0;color: white;">New Mileage Claim</h1>
    @* </div> *@
   
    <form asp-action="Create" method="post" id="createClaimForm">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>

        <div class="custom-card mb-4" style="padding: 1.5rem;">
            <h2 class="text-dark-custom mb-4" style="font-size: 1.125rem; font-weight: 600;">Claim Information</h2>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="TeamLeadApprover" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;">Team Lead / Approver</label>
                    <select asp-for="TeamLeadApprover" class="form-control form-control-custom">
                        <option value="">-- Select Team Lead --</option>
                        <option value="1">John</option>
                        <option value="2">Bubacarr </option>
                        <option value="3">John Doe</option>
                    </select>
                    <span asp-validation-for="TeamLeadApprover" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Wik" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;">Work Location</label>
                    <select asp-for="Wik" class="form-control form-control-custom">
                        <option value="">-- Select Location --</option>
                        <option value="House">AA</option>
                        <option value="Work">CP</option>
                        <option value="Work">Head Office</option>
                        <option value="Work">MA</option>
                    </select>
                    <span asp-validation-for="Wik" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="StartDate" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;">Start Date</label>
                    <input asp-for="StartDate" class="form-control form-control-custom" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="EndDate" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;">End Date</label>
                    <input asp-for="EndDate" class="form-control form-control-custom" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="RatePerKm" class="form-label text-dark-custom fw-medium" style="font-size: 0.875rem; margin-bottom: 0.5rem;">Rate per KM</label>
                    <input asp-for="RatePerKm" class="form-control form-control-custom" type="number" step="0.01" onchange="updateTotals()" disabled />
                    <span asp-validation-for="RatePerKm" class="text-danger" style="font-size: 0.875rem;"></span>
                </div>

                <input type="hidden" asp-for="TotalReimbursement" id="totalReimbursementForm" />
                <input type="hidden" asp-for="TotalKilometers" id="totalKilometersForm" />

            </div>
        </div>

        <div class="custom-card mb-4" style="padding: 1.5rem;">
            <h2 class="text-dark-custom mb-4" style="font-size: 1.125rem; font-weight: 600;">Trip Details</h2>

            <div id="tripsContainer">
                <div class="trip-row mb-3" data-trip-index="0">
                    <div class="row g-2 align-items-end">
                        <div class="col-md-2">
                            <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Date</label>
                            <input type="date" name="Trips[0].TripDate" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-1">
                            <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Time</label>
                            <input type="text" name="Trips[0].TripTime" class="form-control form-control-sm" placeholder="HH:MM" />
                        </div>
                        <div class="col-md-2">
                            <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Description</label>
                            <input type="text" name="Trips[0].Description" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-2">
                            <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Start Location</label>
                            <input type="text" name="Trips[0].StartLocation" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-2">
                            <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">End Location</label>
                            <input type="text" name="Trips[0].EndLocation" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-2">
                            <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Kilometers</label>
                            <input type="number" name="Trips[0].Kilometers" class="form-control form-control-sm trip-kilometers" step="0.1" min="0.1" required onchange="updateTotals()" />
                        </div>
                        <div class="col-md-1 text-center m-0 p-0">
                            <button type="button" class="btn btn-sm btn-link text-danger " onclick="removeTrip(this)">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20
" height="20" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn-primary-custom mt-3" onclick="addTripRow()">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg> Add Another Trip
            </button>
        </div>

        <div class="custom-card mb-4" style="padding: 1.5rem;">
            <h2 class="text-dark-custom mb-4" style="font-size: 1.125rem; font-weight: 600;">Summary</h2>
            <div class="row g-4" style="max-width: 500px;">
                <div class="col-md-6">
                    <div class="summary-card-blue">
                        <p>Total Kilometers</p>
                        <h3 id="totalKilometers">0.00 km</h3>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="summary-card-green">
                        <p>Total Reimbursement</p>
                        <h3 id="totalReimbursement">$0.00</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" name="draft" value="save" class="btn-secondary-custom">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                    <path d="M8 0a2 2 0 0 0-2 2v1H2.5A1.5 1.5 0 0 0 1 4.5v9A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 13.5 3H10V2a2 2 0 0 0-2-2zm3 3v1H5V3a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1zM2.5 4A.5.5 0 0 1 3 4.5v9a.5.5 0 0 1-.5.5h-1A.5.5 0 0 1 1 13.5v-9A.5.5 0 0 1 2.5 4zm11 10a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-9A.5.5 0 0 1 2.5 4h11a.5.5 0 0 1 .5.5v9z" />
                </svg> Save as Draft
            </button>
            <button type="submit" name="action" value="submit" class="btn-primary-custom">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                    <path d="M15.964 0.686a.5.5 0 0 1 .036.708l-15 15a.5.5 0 0 1-.708-.708l15-15a.5.5 0 0 1 .708.036z" />
                    <path d="M6.5 10.5v-2.793l-2.146 2.147a.5.5 0 0 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L9.5 7.707V10.5a.5.5 0 0 1-1 0z" />
                </svg> Create & Submit
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let tripIndex = 1;

        function addTripRow() {
            const container = document.getElementById('tripsContainer');
            const newRow = document.createElement('div');
            newRow.className = 'trip-row mb-3';
            newRow.setAttribute('data-trip-index', tripIndex);

            newRow.innerHTML = `
                <div class="row g-2 align-items-end">
                    <div class="col-md-2">
                        <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Date</label>
                        <input type="date" name="Trips[${tripIndex}].TripDate" class="form-control form-control-sm" required />
                    </div>
                    <div class="col-md-1">
                        <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Time</label>
                        <input type="text" name="Trips[${tripIndex}].TripTime" class="form-control form-control-sm" placeholder="HH:MM" />
                    </div>
                    <div class="col-md-2">
                        <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Description</label>
                        <input type="text" name="Trips[${tripIndex}].Description" class="form-control  form-control-sm" required />
                    </div>
                    <div class="col-md-2">
                        <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Start Location</label>
                        <input type="text" name="Trips[${tripIndex}].StartLocation" class="form-control form-control-sm" required />
                    </div>
                    <div class="col-md-2">
                        <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">End Location</label>
                        <input type="text" name="Trips[${tripIndex}].EndLocation" class="form-control form-control-sm" required />
                    </div>
                    <div class="col-md-2">
                        <label style="font-size: 0.75rem; margin-bottom: 0.25rem; color: var(--gray-700);">Kilometers</label>
                        <input type="number" name="Trips[${tripIndex}].Kilometers" class="form-control form-control-sm trip-kilometers" step="0.1" min="0.1" required onchange="updateTotals()" />
                    </div>
                    <div class="col-md-1 text-center m-0 p-0">
                        <button type="button" class="btn btn-sm btn-link text-danger " onclick="removeTrip(this)">
                                   <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
          <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
        </svg>
                        </button>
                    </div>
                </div>
            `;

            container.appendChild(newRow);
            tripIndex++;
            updateTotals();
        }

        function removeTrip(button) {
            const tripRow = button.closest('.trip-row');
            const container = document.getElementById('tripsContainer');

               if (container.children.length === 1) {
            Swal.fire({
                icon: 'warning',
                title: 'At least one trip required',
                text: 'You must have at least one trip.',
                confirmButtonColor: '#3b82f6'
            });
            return;
        }

            tripRow.remove();
            reindexTrips();
            updateTotals();
        }

        function reindexTrips() {
            const container = document.getElementById('tripsContainer');
            const trips = container.querySelectorAll('.trip-row');

            trips.forEach((trip, index) => {
                trip.setAttribute('data-trip-index', index);
                const inputs = trip.querySelectorAll('input');
                inputs.forEach(input => {
                    const name = input.getAttribute('name');
                    if (name) {
                        input.setAttribute('name', name.replace(/Trips\[\d+\]/, `Trips[${index}]`));
                    }
                });
            });

            tripIndex = trips.length;
        }

        function updateTotals() {
            const ratePerKm = parseFloat(document.querySelector('[name="RatePerKm"]').value) || 0.50;
            let totalKm = 0;

            document.querySelectorAll('.trip-kilometers').forEach(input => {
                totalKm += parseFloat(input.value) || 0;
            });

            const totalReimbursement = totalKm * ratePerKm;

            document.getElementById('totalKilometers').textContent = totalKm.toFixed(2) + ' km';
            document.getElementById('totalReimbursement').textContent = '$' + totalReimbursement.toFixed(2);
            document.getElementsByName('TotalReimbursement').value = totalReimbursement;
            document.getElementsByName('TotalKilometers').value = totalKm;

        }

        document.addEventListener('DOMContentLoaded', function() {
            updateTotals();
        });
    </script>
    }
