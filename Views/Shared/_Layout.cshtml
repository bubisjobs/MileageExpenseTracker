<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MileageExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/MileageExpenseTracker.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>

            <nav class="navbar navbar-expand-sm navbar-custom">
                <div class="container-fluid">
                    <!-- Brand -->
                    <a class="navbar-brand-custom" asp-area="" asp-controller="Mileage" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Mileage Tracker</span>
                    </a>

                    <!-- Mobile Toggle -->
                    <button class="navbar-toggler navbar-toggler-custom" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon navbar-toggler-icon-custom"></span>
                    </button>

                    <!-- Navigation Links -->
                    <div class="collapse navbar-collapse" id="navbarNav">
                        @* <ul class="navbar-nav flex-grow-1"> *@
                        @*     <li class="nav-item"> *@
                        @*         <a class="nav-link-custom active" asp-area="" asp-controller="Mileage" asp-action="Index"> *@
                        @*             <i class="bi bi-house-door me-1"></i> Dashboard *@
                        @*         </a> *@
                        @*     </li> *@
                        @*     <li class="nav-item"> *@
                        @*         <a class="nav-link-custom" asp-area="" asp-controller="Mileage" asp-action="Index"> *@
                        @*             <i class="bi bi-file-text me-1"></i> My Claims *@
                        @*         </a> *@
                        @*     </li> *@
                        @*     @if (User.IsInRole("Admin") || User.IsInRole("Finance")) *@
                        @*     { *@
                        @*         <li class="nav-item"> *@
                        @*             <a class="nav-link-custom" asp-area="" asp-controller="Admin" asp-action="Index"> *@
                        @*                 <i class="bi bi-check-circle me-1"></i> Users *@
                        @*             </a> *@
                        @*         </li> *@
                        @*     } *@
                          
                        @*     <li class="nav-item"> *@
                        @*         <a class="nav-link-custom" asp-area="" asp-controller="Reports" asp-action="Index"> *@
                        @*             <i class="bi bi-bar-chart me-1"></i> Reports *@
                        @*         </a> *@
                        @*     </li> *@
                        @* </ul> *@
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Mileage" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                                   asp-area="" asp-controller="Mileage" asp-action="Index">
                                    <i class="bi bi-file-text me-1"></i> My Claims
                                </a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("Finance"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")"
                                       asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-check-circle me-1"></i> Users
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
                                   asp-area="" asp-controller="Reports" asp-action="Index">
                                    <i class="bi bi-bar-chart me-1"></i> Reports
                                </a>
                            </li>
                        </ul>

                        <!-- Right Side Menu -->
                        <div class="user-menu-custom">
                            <!-- New Claim Button -->
                            <a class="btn-nav-custom" asp-area="" asp-controller="Mileage" asp-action="Create">
                                <i class="bi bi-plus-circle me-1"></i> New Claim
                            </a>

                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- jQuery -->
    @* <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script> *@

