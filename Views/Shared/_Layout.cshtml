<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MileageExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MileageExpenseTracker.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @* <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3"> *@
        @*     <div class="container-fluid"> *@
        @*         <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MileageExpenseTracker</a> *@
        @*         <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" *@
        @*                 aria-expanded="false" aria-label="Toggle navigation"> *@
        @*             <span class="navbar-toggler-icon"></span> *@
        @*         </button> *@
        @*         <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"> *@
        @*             <ul class="navbar-nav flex-grow-1"> *@
        @*                 <li class="nav-item"> *@
        @*                     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
        @*                 </li> *@
        @*                 <li class="nav-item"> *@
        @*                     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        @*                 </li> *@
        @*             </ul> *@
        @*             <partial name="_LoginPartial" /> *@
        @*         </div> *@
        @*     </div> *@
        @* </nav> *@

        <nav class="navbar navbar-expand-sm navbar-custom">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand-custom" asp-area="" asp-controller="Mileage" asp-action="Index">
                    <i class="bi bi-speedometer2"></i>
                    <span>Mileage Tracker</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler navbar-toggler-custom" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon navbar-toggler-icon-custom"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link-custom active" asp-area="" asp-controller="Mileage" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-custom" asp-area="" asp-controller="Mileage" asp-action="Index">
                                <i class="bi bi-file-text me-1"></i> My Claims
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-custom" asp-area="" asp-controller="Approval" asp-action="Index">
                                <i class="bi bi-check-circle me-1"></i> Approvals
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-custom" asp-area="" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-bar-chart me-1"></i> Reports
                            </a>
                        </li>
                    </ul>

                    <!-- Right Side Menu -->
                    <div class="user-menu-custom">
                        <!-- New Claim Button -->
                        <a class="btn-nav-custom" asp-area="" asp-controller="Mileage" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i> New Claim
                        </a>

                        <!-- User Dropdown -->
                        <div class="dropdown dropdown-custom">
                            <button class="dropdown-toggle-custom" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar">JD</div>
                                <span class="d-none d-md-inline">John Doe</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-person me-2"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-gear me-2"></i> Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="#">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - MileageExpenseTracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
